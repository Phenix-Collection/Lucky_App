<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="@dimen/dp_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputShop_Name2"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <EditText
                android:id="@+id/shop_name2"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:hint="@string/shop_name2"
                android:clickable="false"
                android:textSize="14dp"
                android:padding="@dimen/dp_8dp"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputShop_Name3"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <EditText
                android:id="@+id/shop_name3"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:clickable="false"
                android:focusable="false"
                android:hint="@string/shop_name3"
                android:textSize="14dp"
                android:padding="@dimen/dp_8dp" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

</LinearLayout>