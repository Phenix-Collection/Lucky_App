<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fg_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loan.Create_Load">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                android:text="@string/loan_info"
                android:background="#B9E7E7E7"
                android:gravity="center"/>
            <LinearLayout
                android:padding="5dp"
                android:layout_below="@+id/title"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:id="@+id/img_1"
                        android:src="@drawable/ic_null"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilLoan_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/img_1">
                        <EditText
                            android:id="@+id/etLoan_amount"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:hint="@string/loan_amountt"
                            android:background="@null"
                            android:textSize="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <View style="@style/line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:id="@+id/img_2"
                        android:src="@drawable/ic_null"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilBorrowing_period"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/img_2">
                        <EditText
                            android:id="@+id/etBorrowing_period"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:hint="@string/title_loan_term"
                            android:inputType="phone"
                            android:background="@null"
                            android:textSize="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <View style="@style/line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:id="@+id/img_3"
                        android:src="@drawable/ic_null"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPayment_Method"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/img_3">
                        <EditText
                            android:id="@+id/etPayment_Method"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:hint="@string/repayment_type"
                            android:drawableEnd="@drawable/ic_arrow_drop_down"
                            android:focusable="false"
                            android:background="@null"
                            android:textSize="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <View style="@style/line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:id="@+id/img_5"
                        android:src="@drawable/ic_null"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilLoan_contributions"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/img_5">
                        <EditText
                            android:id="@+id/etLoan_contributions"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:inputType="number"
                            android:hint="@string/deposit_amount"
                            android:background="@null"
                            android:textSize="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <View style="@style/line"/>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/relative_OC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img_6"
                            android:padding="2dp"
                            android:src="@drawable/ic_null"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:id="@+id/tv_product_insurance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@+id/img_6"
                            android:text="@string/insurance"
                            android:textSize="15dp" />
                        <RadioGroup
                            android:layout_marginTop="5dp"
                            android:id="@+id/radio_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_product_insurance"
                            android:layout_alignStart="@+id/tv_product_insurance"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/insurance_yes" />
                            <RadioButton
                                android:id="@+id/radio2"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/insurance_no" />
                        </RadioGroup>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/relative_residence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img_6_1"
                            android:padding="2dp"
                            android:src="@drawable/ic_null"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:id="@+id/tv_residence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@+id/img_6_1"
                            android:text="@string/allow_officer"
                            android:textSize="15dp" />
                        <RadioGroup
                            android:layout_marginTop="5dp"
                            android:id="@+id/radio_group1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_residence"
                            android:layout_alignStart="@+id/tv_residence"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/radio3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/allow_yes" />
                            <RadioButton
                                android:id="@+id/radio4"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/allow_no" />
                        </RadioGroup>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <View style="@style/line"/>
                <RelativeLayout
                    android:id="@+id/relati_Contributors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:id="@+id/img_8"
                        android:src="@drawable/ic_null"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_Contributors"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/img_8">
                        <EditText
                            android:id="@+id/et_monthly_payment"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:inputType="number"
                            android:hint="@string/monthly_payment"
                            android:drawableEnd="@drawable/ic_arrow_drop_down"
                            android:focusable="false"
                            android:background="@null"
                            android:textSize="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <View android:id="@+id/view_2"
                    style="@style/line"/>
                <RelativeLayout
                    android:id="@+id/relativeTime_Practicing1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:id="@+id/img_9"
                        android:src="@drawable/ic_null"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTime_Practicing1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/img_9">
                        <EditText
                            android:id="@+id/etallows_homes"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:inputType="number"
                            android:hint="@string/allow_officer"
                            android:background="@null"
                            android:textSize="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <View android:id="@+id/view_3" style="@style/line"/>
                <RelativeLayout
                    android:id="@+id/relative_conspirator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:id="@+id/img_7"
                        android:src="@drawable/ic_null"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_conspirator"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/img_7">
                        <EditText
                            android:id="@+id/etNumber_debt"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:inputType="number"
                            android:hint="@string/number_lending"
                            android:background="@null"
                            android:textSize="14dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <View style="@style/line"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_next"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@android:color/holo_blue_light"
                />
            <Button
                android:id="@+id/btn_back"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@android:color/holo_blue_light"
                />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>